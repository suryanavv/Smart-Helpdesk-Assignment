# Server
NODE_ENV=development
PORT=8080

# Database
# For local dev, use localhost; for Docker, set to mongodb://mongo:27017/helpdesk
MONGO_URI=mongodb://localhost:27017/helpdesk

# Auth (HttpOnly cookies)
JWT_SECRET=change-me-in-prod
REFRESH_JWT_SECRET=change-me-too
ACCESS_TOKEN_TTL_SEC=900
REFRESH_TOKEN_TTL_SEC=2592000
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# CORS (dev client on 5173)
CORS_ORIGIN=http://localhost:5173

# Agent / Stub
STUB_MODE=true
AUTO_CLOSE_ENABLED=true
CONFIDENCE_THRESHOLD=0.78

# Optional integrations
# Redis is used for notification pub/sub if provided; otherwise in-memory fallback is used
REDIS_URL=


